<% if (title) { %>
<h1><%= title %></h1>

<!-- Registration Form -->
<form id="login-form" action="/account/register" method="post">
  <label for="firstName">First Name</label>
  <input
    type="text"
    name="account_firstname"
    id="accountFirstname"
    required
    value="<%= locals.account_firstname %>"
  />

  <label for="lastName">Last Name</label>
  <input
    type="text"
    name="account_lastname"
    id="accountLastname"
    required
    value="<%= locals.account_lastname %>"
  />

  <label for="email">Email Address</label>
  <input
    type="email"
    name="account_email"
    id="email"
    required
    value="<%= locals.account_email %>"
  />

  <label for="password">Password</label>
  <input
    type="password"
    name="account_password"
    id="pword"
    required
    pattern="^(?=.*[A-Z])(?=.*\\d)(?=.*[@$!%*?&])[A-Za-z\\d@$!%*?&]{12,}$"
    title="Password must be at least 12 characters long, include at least 1 uppercase letter, 1 number, and 1 special character."
  />

  <span id="pswdBtn">Show Password</span>

  <button type="submit" id="register-btn">Register</button>
  <div class="sign-up-link">
    <span>No account? <a href="/account/register">Sign-up</a></span>
  </div>
</form>

<!-- Sign Up Link -->

<% } else { res.redirect('/'); } %> <% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>
